  <profiles>

    <!-- The default profile (called with no environment property) will build and execute unit tests -->
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <version>${maven-deploy-plugin.version}</version>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven-surefire-plugin.version}</version>
            <configuration>
              <skipTests>${skipTests}</skipTests>
              <suiteXmlFiles>
                <suiteXmlFile>${basedir}/src/test/resources/testng.xml</suiteXmlFile>
              </suiteXmlFiles>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- *** Begin EC & Local Build Server Execution *** -->
    <!--
    Note - The localhost profile builds locally, and only executes this modules unit tests.
    -->
    <profile>
      <id>Acceptance-localhost</id>
      <activation>
        <!-- Below property is used to hook the test execution into electric commander-->
        <property>
          <name>environment</name>
          <value>localhost</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <version>${maven-deploy-plugin.version}</version>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven-surefire-plugin.version}</version>
            <configuration>
              <suiteXmlFiles>
                <suiteXmlFile>${basedir}/src/main/resources/testng-acceptance.xml</suiteXmlFile>
              </suiteXmlFiles>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- *** End of EC & Local Build Server Execution *** -->

    <!-- *** Begin Remote Server Executions *** -->
    <!--
    Note - The remote reference profiles build locally or on EC, but executes whatever is deployed remotely.
    If building on EC, deployment of the acceptance test and service will occur according to the portfolio
    configuration for the reference. The remote execution location below will execute the acceptance test using the
     SAS service object (or override object) which points to the reference's service instance.
    -->

    <profile>
      <id>RemoteAcceptance-ftval11</id>
      <activation>
        <property>
          <name>environment</name>
          <value>ftval11</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.familysearch.qa</groupId>
            <artifactId>qa-common-acceptance-test-mojo</artifactId>
            <version>${qa-common-acceptance-test-mojo.version}</version>
            <executions>
              <execution>
                <id>command1</id>
                <phase>verify</phase>
                <goals>
                  <goal>runcommand</goal>
                </goals>
                <configuration>
                  <!-- The runner server where the remote is installed - Using SAS Service Location-->
                  <serviceObject>acceptance-${environment}</serviceObject>
                  <resultsOutputFile>${project.build.directory}/surefire-reports/acceptance-test-report.txt</resultsOutputFile>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- *** End of Remote Server Executions *** -->
  </profiles>


